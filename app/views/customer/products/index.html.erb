<div class="container">
	 <div class="row">
	 	<!-- 検索ジャンル -->
	 	<div class="col-sm-3">
	 		<%= render 'search',genres: @genres %>
	 	</div>
	 	<div class="col-sm-9">
	 	<h2>商品一覧</h2>
		<% @products.each do |product| %>
	 	<div class="col-sm-2">
	 		<tr>商品画像<p><%= link_to product_path(product.id) do %>
	 			<%= attachment_image_tag product, :image, :fill, 60, 60, format: 'jpeg' %>
	 			<% end %>
	    	</p></tr>
	 		<tr>商品名<span><%= link_to product.name, product_path(product.id) %></span>
	 		</tr>
	    	<tr>値段<span><%= product.price %></span>
	    	</tr>
	 	</div>
	<% end %>
	</div>
</div>