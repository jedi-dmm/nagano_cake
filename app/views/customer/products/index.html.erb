<div class="container">
	 <div class="row">
	 	<!-- 検索ジャンル -->
	 	<div class="col-sm-3">
	 		<%= render 'search',genres: @genres %>
	 	</div>
	 	<div class="col-sm-7">
	 	<h2>商品一覧</h2>
		<% @products.each do |product| %>
	 	<div class="col-sm-3">
	 		<tr><p><%= link_to product_path(product.id) do %>
	 			<%= attachment_image_tag product, :image, :fill, 100, 100, format: 'jpeg' %>
	 			<% end %>
	    	</p></tr>
	 		<li>商品名<span><%= link_to product.name, product_path(product.id) %></span>
	 		</li>
	    	<li>¥<span><%= product.price %></span>
	    	</li>
	 	</div>
	<% end %>
	</div>
</div>