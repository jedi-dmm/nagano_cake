<div class="container">

    <h2>配送先編集</h2>

    <div class="row">
        <div class="col-md-9">


        	<% if @post.errors.any? %>
                <div id="error_explanation">
                    <h4>
                        <%= pluralize(@post.errors.count, "error") %> prohibited this book from being saved:
                    </h4>
                    <ul>
                        <% @post.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>


            <%= form_for @post,:url => {controller: "posts", action: "update"}, method: :patch do |f| %>

                <div class="field">
                    <%= f.label :郵便番号 %>
                    <%= f.text_field :postcode,  autofocus: true, autocomplete: "postcode" %>
                </div>

                <div class="field">
                    <%= f.label :住所 %>
                    <%= f.attachment_field :address, autofocus: true, autocomplete: "address" %>
                </div>

                <div class="field">
  	                <%= f.label :宛名 %>
                    <%= f.text_area :name, autofocus: true, autocomplete: "name" %>
                </div>

                <div class="actions">
                    <%= f.submit "編集する", class: "btn btn-primary pull-right" %>
                </div>

            <% end %>


        </div>
    </div>

</div>