<div class="row">
	<!-- ページタイトル -->
	<div class="col-xs-3">
		<h3>ショッピングカート</h3>
	</div>

	<div class="col-xs-offset-6 col-xs-3">
		<!-- 全削除リンク -->
		<%= link_to "カートを空にする",destroy_carts_path,mothod: :delete,data: { confirm: 'カートを空にしてよろしいでしょうか?' } %>
	</div>
</div>

<!-- カート一覧 -->
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込)</th>
			<th>数量</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		<% @carts.each do |cart| %>
			<tr>
				<td><%= cart_product.name %></td>
				<td><%= cart_product.price %></td>
				<td>
					<%= form_for(cart) do |f| %>
					<% f.text_field :product_quantity, value: cart.product_quantity %>
					<%= f.submit '変更する' %>
					<% end %>
				</td>
				<td>
					<!-- 計算はmodelで定義 -->
					<%= @subtotal %>
				</td>
				<td>
					<%= link_to "削除する",carts_path,mothod: :delete,data: { confirm: '削除してもよろしいでしょうか?' } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>




