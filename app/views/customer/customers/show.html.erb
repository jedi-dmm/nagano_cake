<div class="container">
  <div class="row">
    <div class="maypage-main">
      <p id="notice"><%= notice %></p>
      <h2 class="mypage-title">マイページ</h2>
      <div class="mypage-flex-group mypage-register-info-header">
        <span>登録情報</span>
        <%= link_to '編集する',edit_customer_registration_path, class: "btn btn-success" %>
        <%= link_to 'パスワードを変更する', new_customer_password_path(@customer), class: "btn btn-success" %>
      </div>
      <br><br>
      <table class="row table table-bordered mypage-register-info-table">
        <tr>
          <th class="col-xs-3 active">氏名</th>
          <td class="col-xs-9"><%= @customer.last_name + "　" + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="active">カナ</th>
          <td><%= @customer.last_name_kana + "　" + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="active">郵便番号</th>
          <td><%= '〒' + @customer.postcode %></td>
        </tr>
        <tr>
          <th class="active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="active">電話番号</th>
          <td><%= @customer.tel %></td>
        </tr>
        <tr>
          <th class="active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>

    </div>
  </div>
</div>