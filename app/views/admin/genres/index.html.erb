<!-- ページタイトル -->
<h3>ジャンル一覧・追加</h3>

<div class="col-xs-6">
	<!-- ジャンル追加 -->
	<%= form_for(@genre,url:admin_genres_path) do |f| %>
		<!-- 入力ボックス -->
		<%= f.label :name, "ジャンル" %>
		<%= f.text_field :name %>
		<!-- ラジオボタン  -->
		<%= f.radio_button :genre_status,:true, checked: true %>
		<%= f.label :genre_status,"有効" %>
		<%= f.radio_button :genre_status,:false %>
		<%= f.label :genre_status,"無効" %>
		<!-- 追加ボタン -->
		<%= f.submit '追加',class: "btn btn-primary" %>
	<% end %>



	<!-- ジャンル一覧 -->
	<table class="table table-hover table-inverse table-bordered">
		<thead>
			<tr class="active">
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td>
						<% if genre.genre_status == true %>
							<label>有効</label>
						 <% else %>
						 	<label>無効</label>
						 <% end %>
					</td>
					<td>
						<%= link_to "編集する",edit_admin_genre_path(id: genre.id),class: "btn btn-primary col-xs-offset-4 col-xs-4" %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>