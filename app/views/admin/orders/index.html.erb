<div class="container"　data-turbolinks="false">
	<div class="row">
		<div>
			<h3>注文履歴一覧</h3>
		</div>
		<div>
			<table class="table">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td class="vertical-center">
							<%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order)%>
						</td>
						<td class="vertical-center">
							<%= order.customer.last_name + order.customer.first_name %>
						</td>
						<td class="vertical-center">
							<%= order.order_products.all.sum(:product_quantity) %>
						</td>
						<td class="vertical-center">
							<%= order.order_status %>
						</td>
					</tr>
					<% end %>
		        </tbody>
		    </table>
		</div>
	</div>
</div>