<div class="container">
	<div class="row">
		<div class="col-md-offset-2">
			<h2>商品新規登録</h2>
		</div>
	</div>
	<%= form_for(@product, url: admin_products_path) do |f| %>
	<div class="row">
		<div class="col-md-3 col-md-offset-2">
			<% if @product.errors.any? %>
			<div id="error_explanation" class="alert alert-danger">
				<h3><%= @product.errors.count %></h3>
				<ul>
					<% @product.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
			<% end %>
			<p>ファイル選択 <%= f.attachment_field :image %></p>
		</div>
		<div class="col-md-6">
			<h3>商品名     <%= f.text_field :name %></h3>
			<h3>商品説明   <%= f.text_area :caption %></h3>
			<h3>ジャンル    <%= f.collection_select :genre_id, Genre.all, :id, :name %></h3>
			<h3>税抜価格      <%= f.number_field :price, min:0 %></h3>
			<h3>販売ステータス     <%= f.select :sale_status, Product.sale_statuses.keys %></h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-8">
			<p><%= f.submit '新規登録', class: "btn btn-primary" %></p>
		</div>
	</div>
	<% end %>
</div>