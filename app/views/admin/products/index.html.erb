<div class="container">
	 <div class="row">
	 	  <h2 class="page-title">商品一覧</h2>
      <%= link_to "+", new_admin_product_path, class: "btn btn-primary btn-circle" %>
	 	<div class="col-sm-8 col-md-offset-2">
    <table class="table table-hover">
	    <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

	 		<tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= link_to product.name, admin_product_path(product.id) %></td>
              <td><%= product.price %></td>
              <td><%= product.genre.name %></td>
              <td><%= product.sale_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
	 	</div>
     <%= paginate @products, class: "paginate" %>
</div>