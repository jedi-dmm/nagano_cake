<div class="container">
  <h2 class="admin-customers-edit-title"><%= @customer.last_name + "　" + @customer.first_name %>さんの会員情報編集</h2>

  <br><br>

  <%= form_for([:admin, @customer], html: { class: "form-inline"}) do |f| %>
    <% if @customer.errors.any? %>
      <div id="error_explanation">
        <h3><%= @customer.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <div class="row">
        <h4 class="col-xs-2"><%= f.label "会員ID" %></h4>
        <h4 class="col-xs-2"><%= @customer.id %></h4>
      </div>

      <div class="row">
        <div class="col-xs-2"><h4><%= f.label "氏名" %></h4></div>
        <div class="col-xs-2"><%= f.text_field :last_name, class:"form-control" %></div>
        <div class="col-xs-2" ></h5><%= f.text_field :first_name, class:"form-control" %></div>
      </div>


      <div class="row">
        <h4 class="col-xs-2"><%= f.label "フリガナ" %></h4>
        <div class="col-xs-2"><%= f.text_field :last_name_kana, class:"form-control" %></div>
          <div class="col-xs-2"><%= f.text_field :first_name_kana, class:"form-control" %></div>
        </div>

      <div class="row">
        <h4 class="col-xs-2"><%= f.label "郵便番号" %></h4>
        <div class="col-xs-2"><%= f.text_field :postcode, class:"form-control" %></div>
      </div>

      <div class="row">
        <h4 class="col-xs-2"><%= f.label "住所" %></h4>
        <div><%= f.text_field :address, class:"form-control", style:"width: 70%;" %></div>
      </div>

      <div class="row">
        <h4 class="col-xs-2"><%= f.label "電話番号" %></h4>
        <div class="col-xs-3"><%= f.text_field :tel, class:"form-control" %></div>
      </div>

      <div class="row">
        <h4 class="col-xs-2"><%= f.label "メールアドレス" %></h4>
        <div class="col-xs-3"><%= f.text_field :email, class:"form-control" %></div>
      </div>

      <div class="row">
        <h4 class="col-xs-2"><%= f.label "会員ステータス" %></h4>
        <div class="col-xs-1"><%= f.radio_button :customer_status, :true %><%= f.label :customer_status, "有効" %></div>
          <div class="col-xs-2"><%= f.radio_button :customer_status, :false %><%= f.label :customer_status, "退会済み" %></div>
      </div>

      <br><br>

    <div class="row">
      <div class="col-xs-2"><%= f.submit "変更を保存する", class:"btn btn-primary" %></div>
    </div>
  <% end %>
</div>